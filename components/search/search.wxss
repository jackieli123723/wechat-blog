.search-container {
  padding: 16rpx;
}
.search-container .header {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.0785);
}
.search-container .header .text {
  font-size: 18px;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.8);
  line-height: 1.4;
  position: relative;
}
.search-container .header .text:after {
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 1px;
  background: #2f2f2d;
  content: '';
}
.search-container .search {
  margin-top: 24rpx;
}
.search-container .search .box {
  position: relative;
}
.search-container .search .box .txt {
  -webkit-appearance: none;
  width: 100%;
  display: block;
  font-size: 14px;
  line-height: 40px;
  height: 40px;
  padding: 0 40px 0 18px;
  box-sizing: border-box;
  color: #313131;
  border: 1px solid rgba(184, 197, 214, 0.2);
  border-radius: 2px;
  outline: 0;
  background-color: #fff;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
  padding-left: 93px;
}
.search-container .search .box .txt:hover {
  transition: box-shadow 0.3s;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.14);
}
.search-container .search .box .btn {
  position: absolute;
  z-index: 2;
  right: 5px;
  top: 5px;
  width: 30px;
  height: 30px;
}
.search-container .search .box .btn .img {
  position: absolute;
  width: 20px;
  height: 20px;
  left: 5px;
  top: 5px;
}
.search-container .c-dropdown {
  position: absolute;
  left: 0;
  top: 0;
  height: 40px;
  display: inline-block;
  text-align: left;
}
.search-container .c-dropdown__list {
  padding: 6px 0;
  list-style: none;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  opacity: 0;
  visibility: hidden;
  border-radius: 0 0 3px 3px;
  background: #fff;
  -webkit-transition: opacity 0.25s linear, top 0.25s linear;
  transition: opacity 0.25s linear, top 0.25s linear;
  border: 1px solid #4abdcc;
  border-top: 0;
  box-sizing: border-box;
  z-index: 999;
}
.search-container .c-dropdown.is-open .c-dropdown__list {
  opacity: 1;
  visibility: visible;
  top: 100%;
}
.search-container .c-dropdown__item {
  padding: 6px 12px;
  font-size: 14px;
  line-height: 20px;
  cursor: pointer;
  color: #434A54;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-transition: background-color 0.25s linear;
  transition: background-color 0.25s linear;
}
.search-container .c-dropdown__item:hover {
  background-color: #E6E9ED;
}
.search-container .c-button {
  -webkit-appearance: none;
  margin: 0;
  border: 0;
  overflow: visible;
  font: inherit;
  text-transform: none;
  display: inline-block;
  vertical-align: middle;
  text-decoration: none;
  text-align: center;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.search-container .c-button:hover,
.search-container .c-button:focus {
  outline: none;
  text-decoration: none;
}
.search-container .c-button:not(:disabled) {
  cursor: pointer;
}
.search-container .c-button--dropdown {
  background-color: #4abdcc;
  color: #E6E9ED;
  font-size: 14px;
  height: 40px;
  min-width: 90px;
  line-height: 40px;
  text-align: left;
  border-radius: 2px 0 0 2px;
  text-indent: 10px;
  -webkit-transition: background-color 0.2s linear;
  transition: background-color 0.2s linear;
}
.search-container .c-button--dropdown:hover {
  background-color: #AC92EC;
}
.search-container .c-button--dropdown:after {
  content: "";
  position: absolute;
  top: 17px;
  right: 9px;
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-top-color: #E6E9ED;
}
