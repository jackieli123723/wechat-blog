.loading {
  color: #b0b0b0;
  text-align: center;
  margin: 20rpx 0;
}
.header-nav {
  position: fixed;
  height: 31px;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 2;
  background: #fff;
  overflow-x: auto;
  display: flex;
  text-align: center;
  justify-content: space-between;
}
.header-nav .nav {
  font-size: 12px;
  font-weight: bold;
  color: #999999;
  cursor: pointer;
  height: 30px;
  line-height: 30px;
  flex: 1;
  text-align: center;
}
.header-nav .nav.active {
  border-bottom: 1px solid #000000;
  color: #1d1f23;
}
page {
  background-color: #fff;
}
/*lower-threshold 生效*/
scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 31px;
}
.article-main-box {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 15rpx 0;
}
.article-main-box .article-container {
  flex: 1;
  position: relative;
  width: 100%;
}
.article-main-box .article-item {
  position: relative;
  margin-bottom: 15rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
  transition: box-shadow 0.3s;
  line-height: 1.4;
}
.article-main-box .pic {
  position: relative;
  width: 100%;
  height: auto;
}
.article-main-box .pic .article-img {
  width: 100%;
  background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
}
.article-main-box .publish-date {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: rgba(64, 84, 90, 0.7);
  color: #Fff;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  text-align: center;
  line-height: 1;
}
.article-main-box .publish-date .time {
  display: block;
}
.article-main-box .publish-date .top {
  margin-top: 5px;
}
.article-main-box .title {
  padding: 15px;
  color: #242f35;
  font-size: 16px;
  font-weight: 400;
  /*单行打点*/
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.article-main-box .tips {
  /*多行打点 不用给height*/
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
  line-height: 1.4;
  padding: 0 15px;
  font-size: 14px;
  color: #666;
}
.article-main-box .tag {
  padding: 6px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(0, 0, 0, 0.7);
  border-radius: 4px;
  display: inline-block;
  margin: 8px 0 8px 15px;
  line-height: 1;
}
/* 返回顶部 */
.widget-goTop {
  position: fixed;
  bottom: 35px;
  right: 15px;
  background: rgba(0, 0, 0, 0.48);
  border-radius: 50%;
  overflow: hidden;
  z-index: 500;
}
.widget-goTop .gotop-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  font-size: 12px;
  color: #fff;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.8);
  -webkit-background-size: 50px auto;
}
