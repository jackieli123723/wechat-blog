  position: absolute;
  width: 64px;
  height: 64px;
  left: 50%;
  top: 50%;
  margin-top: -32px;
  margin-left: -32px;
  z-index: 4;
}
/*列表*/
.comment-container {
  padding: 16rpx;
}
.comment-container .comment-total {
